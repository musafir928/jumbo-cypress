{
  "name": "jumbo-cypress",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "delete:reports": "rm -r cypress/reports/* || true",
    "prereport": "npm run delete:reports",
    "junit:merge": "npx junit-merge -d 'cypress/reports/junit' -o 'cypress/reports/junit/results.xml'",
    "cy:open": "npx cypress open",
    "cy:run": "npx cypress run",
    "cy:run:all": "npm run prereport && npx cypress run || true && npm run junit:merge"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@cypress/grep": "^5.0.0",
    "@faker-js/faker": "^10.1.0",
    "cypress": "^15.5.0",
    "cypress-mochawesome-reporter": "^4.0.2",
    "cypress-multi-reporters": "^2.0.5",
    "junit-merge": "^2.0.0",
    "mocha-junit-reporter": "^2.2.1"
  },
  "keywords": [
    "e2e",
    "cypress"
  ],
  "author": "Adil Ablimit",
  "license": "ISC"
}
